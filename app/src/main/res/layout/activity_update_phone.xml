<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimCardActivity">

    <ImageView
        android:id="@+id/updatePhoneImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/step01" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_below="@+id/updatePhoneImages"
        android:layout_alignEnd="@id/updatePhoneImages"
        android:text="Next"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/stepCounter"
        android:layout_marginTop="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Step 1"
        android:textSize="15sp"
        android:layout_below="@+id/updatePhoneImages"

        />
    <Button
        android:id="@+id/button2"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatePhoneImages"
        android:layout_alignStart="@id/updatePhoneImages"
        android:layout_marginRight="125sp"
        android:text="Prev"
        android:textSize="8sp" />




    <TextView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/update_phone_header"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images"
        android:layout_marginTop="10dp"
        android:text="@string/update_phone"
        android:textSize="16sp" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/steps"
        android:layout_centerInParent="true"
        android:layout_marginTop="5sp"
        android:text="Go To Settings" />


</RelativeLayout>